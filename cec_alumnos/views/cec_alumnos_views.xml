<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Registro usuarios -->
        <record id="view_res_partner_tree" model="ir.ui.view">
            <field name="name">view.res.partner.tree</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <tree string="Registro de usuario">
                    <field name="identification_type_id"/>
                    <field name="identification_number"/>
                    <field name="gender_id"/>
                    <field name="residence_city_id"/>
                    <field name="state_id"/>
                    <field name="nationality_id"/>
                    <field name="street2"/>
                    <field name="location_reference"/>
                    <field name="disability"/>
                    <field name="disability_id"/>
                    <field name="conadis_number"/>
                </tree>
            </field>
        </record>

        <record id="view_res_partner_form_cec" model="ir.ui.view">
            <field name="name">view.res.partner.form.cec</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <form string="Registro de usuario" version="8.0">
                    <sheet>
                        <field name="image" widget="image" style="margin-left:30px" height="90" width="90"
                               class="oe_left oe_avatar"
                               options="{&quot;preview_image&quot;: &quot;image_medium&quot;, &quot;size&quot;: [90, 90]}"/>
                        <div class="oe_title">
                            <h1>
                                <field name="name" default_focus="1" placeholder="Nombres y Apellidos"
                                       on_change="on_name(name)"/>
                            </h1>
                        </div>
                        <group col="4" colspan="3">
                            <field name="identification_type_id" nolabel="0"/>
                            <newline/>
                            <field name="identification_number"/>
                            <newline/>
                            <field name="gender_id"/>
                            <newline/>
                            <field name="nationality_id"/>
                            <newline/>
                            <group col="4" colspan="3">
                                <label for="phone" string="Telf. Domicilio"/>
                                <field name="phone" nolabel="1"/>
                                <label for="mobile" string="Movil"/>
                                <field name="mobile" nolabel="1"/>
                                <label for="street" string="DirecciÃ³n"/>
                                <field name="street" placeholder="Calle Principal..." required="1" nolabel="1"/>
                                <newline/>
                                <field name="street2" placeholder="Calle Secundaria..."/>
                                <newline/>
                                <field name="residence_city_id" on_change="city_change(residence_city_id)"
                                       widget="selection"/>
                                <newline/>
                                <field name="state_id"/>
                                <newline/>
                                <field name="location_reference"/>
                                <newline/>
                            </group>
                            <newline/>
                            <field name="disability"/>
                            <newline/>
                            <field name="disability_id"
                                   attrs="{'invisible':[('disability', '=', False)], 'required':[('disability', '=', True)]}"/>
                            <newline/>
                            <field name="conadis_number"
                                   attrs="{'invisible':[('disability', '=', False)], 'required':[('disability', '=', True)]}"/>
                            <newline/>
                            <group col="4" colspan="2">
                                <field name="work_institution"/>
                                <newline/>
                                <field name="charge"/>
                                <newline/>
                                <field name="work_email"  widget="email" placeholder="usuario@dominio.org"/>
                                <newline/>
                                <field name="work_city"/>
                                <newline/>
                                <field name="work_address"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</openerp>
